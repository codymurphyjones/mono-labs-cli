{
  "actions": [
    "yarn mono app dev"
  ],
  "preactions": [
    "node scripts/ngrok_setup"
  ],
  "environments": {
    "dev": {
      "NEXT_PUBLIC_API_URL": "${ngrok_api}",
      "ApiUrl": "${ngrok_api}",
      "NEXT_FORCE_PROD": "false",
      "NEXT_PUBLIC_TRPC_URL": "${ngrok_api}/trpc"
    },
    "stage": {
      "NEXT_PUBLIC_API_URL": "${ngrok_api}",
      "ApiUrl": "${ngrok_api}",
      "NEXT_FORCE_PROD": "true",
      "NEXT_PUBLIC_TRPC_URL": "${ngrok_api}/tprc"
    }
  },
  "options": {
    "dev": {
      "description": "Run in dev mode",
      "shortcut": "d"
    }
  }
}